/*******************************************************************************
 * ROFI VERTICAL THEME USING THE NORD COLOR PALETTE 
 * User                 : LR-Tech               
 * Theme Repo           : https://github.com/lr-tech/rofi-themes-collection
 * Nord Project Repo    : https://github.com/arcticicestudio/nord

 * The palette is modified to use base16 colors
 *******************************************************************************/

* {
    base0:     #{{base00-hex}};
    base1:     #{{base01-hex}};
    base2:     #{{base02-hex}};
    base3:     #{{base03-hex}};

    base4:     #{{base04-hex}};
    base5:     #{{base05-hex}};
    base6:     #{{base06-hex}};

    base7:     #{{base07-hex}};
    base8:     #{{base08-hex}};
    base9:     #{{base09-hex}};
    base10:    #{{base10-hex}};
    base11:    #{{base11-hex}};

    base12:    #{{base12-hex}};
    base13:    #{{base13-hex}};
    base14:    #{{base14-hex}};
    base15:    #{{base15-hex}};

    background-color:   @base0;
    text-color:         @base4;
    accent-color:       @base9;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    background-color:   @base0;
    border-color:       @accent-color;

    location:   center;
    width:      480px;
    border:     1px;
}

inputbar {
    padding:    8px 12px;
    spacing:    12px;
    children:   [ prompt, entry ];
}

prompt, entry, element-text, element-icon {
    vertical-align: 0.5;
}

prompt {
    text-color: @accent-color;
}

listview {
    lines:      8;
    columns:    1;

    fixed-height:   false;
}

element {
    padding:    8px;
    spacing:    8px;
}

element normal urgent {
    text-color: @base8;
}

element normal active {
    text-color: @accent-color;
}

element selected {
    text-color: @base0;
}

element selected normal {
    background-color:   @accent-color;
}

element selected urgent {
    background-color:   @base9;
}

element selected active {
    background-color:   @base9;
}

element-icon {
    size:   0.75em;
}

element-text {
    text-color: inherit;
}
